@model CTY_DVVT.Models.TaiXe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<h2 class="text-center mt-2">Sửa thông tin Tài Xế</h2>
<div class="container">
    <form action="/taixe/edit/@Model.TXId" method="post" enctype="multipart/form-data">
        <input type="hidden" name="TXId" value="@Model.TXId" />
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12 fw-bold">
                <label for="@Model.TXName">Tên Tài Xế</label>
                <input type="text" class="form-control" id="TXName" name="TXName" value="@Model.TXName" />
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12 fw-bold">
                @Html.LabelFor(row => row.XeId, "Xe")
                @Html.DropDownListFor(row => row.XeId, new SelectList(ViewBag.Xe, "XeId", "BSXe", 1), "Please select ...", new { @class = "form-control", @Value = Model.XeId })
                @Html.ValidationMessageFor(row => row.XeId)
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12 fw-bold">
                <label for="@Model.TXSdt">Số điện thoại</label>
                <input type="text" class="form-control" id="TXSdt" name="TXSdt" value="@Model.TXSdt" />
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12">
                <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> Cập nhật</button>
                <a href="/taixe/index" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Hủy</a>
            </div>
            <div class="col-md-4"></div>
        </div>

    </form>
</div>

