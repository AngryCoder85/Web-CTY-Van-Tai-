@model List<CTY_DVVT.Models.HoaDonDo>

@{
    ViewBag.Title = "Hoá Đơn Đỏ";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<h2 class="mt-2 text-center text-uppercase">Hóa đơn đỏ</h2>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-4">
            <a href="/hoadondo/create" class="text-white btn btn-dark"><i class="fa fa-archive" aria-hidden="true"></i> Thêm hóa đơn đỏ</a>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <form action="/hoadondo/index">
        <div id="flx-contain" class="input-group d-flex flex-row justify-content-center">
            <div id="row-sort" class="d-flex flex-row ms-2 mt-2">
                <div class="d-flex form-floating me-2 w-100 mt-2">
                    <input type="date" class="form-control" id="DayS" name="DayS" />
                    <label for="DayS">Ngày bắt đầu</label>
                </div>
                <div class="d-flex form-floating w-100 mt-2">
                    <input type="date" class="form-control" id="DayE" name="DayE" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <label for="DayE">Ngày kết thúc</label>
                </div>
            </div>
            <script>
                function onresize() {
                    if ($(window).width() <= 1000) {
                        $("#row-sort").addClass("flex-column");
                        $("#row-sort").removeClass("flex-row");
                    } else {
                        $("#row-sort").removeClass("flex-column");
                        $("#row-sort").addClass("flex-row");
                    }
                }
                $(window).ready(onresize);
                $(window).resize(onresize);
                onresize();
            </script>
        </div>
        <div class="d-flex justify-content-center"><button type="submit" class="btn btn-secondary mt-2"><i class="bi bi-funnel-fill"></i> Lọc</button></div>
    </form>
</div>
<div class="container-fluid mt-2">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ngày&nbsp;Tháng</th>
                    <th>Hóa&nbsp;đơn&nbsp;xuất</th>
                    <th>Hóa&nbsp;đơn&nbsp;nhập</th>
                    <th>Ghi&nbsp;Chú</th>
                    <th>Sửa&nbsp;/&nbsp;Xóa&nbsp;&nbsp;&nbsp;&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NgayThang.ToString("dd/MM/yyyy")</td>
                        <td>@item.HDXuat.ToString("#,##0")</td>
                        <td>@item.HDNhap.ToString("#,##0")</td>
                        <td>@item.GhiChu</td>
                        <td>
                            <a href="/hoadondo/edit/@item.HoaDonDoID"><i class="fa fa-pencil btn btn-secondary" aria-hidden="true"></i></a>
                            <a href="/hoadondo/delete/@item.HoaDonDoID"><i class="fa fa-trash btn btn-danger" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row mt-2">
        <div class="col-12 d-flex justify-content-end"><a href="/HoaDonDo/exporttoexcel" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Xuất Excel</a></div>
    </div>
</div>

