@model CTY_DVVT.Models.KhachHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<h2 class="text-center mt-2">Sửa thông tin Khách Hàng</h2>
<div class="container">
    <form action="/khachhang/edit/@Model.KHId" method="post" enctype="multipart/form-data">
        <input type="hidden" name="KHId" value="@Model.KHId" />
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12 fw-bold">
                <label for="@Model.KHName">Tên Khách Hàng</label>
                <input type="text" class="form-control" id="KHName" name="KHName" value="@Model.KHName" />
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12 fw-bold">
                <label for="@Model.KHSdt">Số điện thoại</label>
                <input type="text" class="form-control" id="KHSdt" name="KHSdt" value="@Model.KHSdt" />
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12 fw-bold">
                <label for="@Model.KHDiaChi">Địa chỉ</label>
                <input type="text" class="form-control" id="KHDiaChi" name="KHDiaChi" value="@Model.KHDiaChi" />
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-sm-12">
                <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> Cập nhật</button>
                <a href="/khachhang/index" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Hủy</a>
            </div>
            <div class="col-md-4"></div>
        </div>

    </form>
</div>

