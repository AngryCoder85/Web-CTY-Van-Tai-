@model List<CTY_DVVT.Models.KhachHang>

@{
    ViewBag.Title = "Danh sách Khách Hàng";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<h2 class="mt-2 text-center text-uppercase">Danh sách Khách Hàng</h2>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-4">
            <a href="/khachhang/create" class="text-white btn btn-dark"><i class="fa fa-archive" aria-hidden="true"></i> Thông tin khách hàng mới</a>
        </div>
    </div>
</div>
<div class="container-fluid mt-2">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Tên&nbsp;Khách&nbsp;Hàng&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    <th>Số&nbsp;điện&nbsp;thoại&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    <th>Địa&nbsp;chỉ&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    <th>Sửa&nbsp;/&nbsp;Xóa&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KHName</td>
                        <td>@item.KHSdt</td>
                        <td>@item.KHDiaChi</td>
                        <td>
                            <a href="/KhachHang/edit/@item.KHId"><i class="fa fa-pencil btn btn-secondary" aria-hidden="true"></i></a>
                            <a href="/KhachHang/delete/@item.KHId"><i class="fa fa-trash btn btn-danger" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

