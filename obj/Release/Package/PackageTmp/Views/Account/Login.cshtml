@model CTY_DVVT.ViewModel.Login
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutPageGlobal.cshtml";
}

<h2 class="mt-3 text-center text-uppercase">khu vực quản lý</h2>
<h2 class="text-center text-uppercase">đăng nhập</h2>
<div class="container-fluid my-4">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div id="frm-login" class="row mx-auto">
            <div class="col-12">
                @Html.TextBoxFor(temp => temp.Username, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                @Html.ValidationMessageFor(temp => temp.Username)
            </div>
            <div class="col-12">
                @Html.PasswordFor(temp => temp.Password, new { @class = "form-control mt-2", placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(temp => temp.Password)
            </div>
        </div>
        <div id="frm-validate" class="row mx-auto">
            <div class="col-12">
                @Html.ValidationSummary()
            </div>
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-success mt-1"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
            </div>
        </div>
    }
    <script>
        function onresize() {
            if ($(window).width() <= 1000) {
                $("#frm-login").addClass("w-75");
                $("#frm-login").removeClass("w-25");
                $("#frm-validate").addClass("w-75");
                $("#frm-validate").removeClass("w-25");
            } else {
                $("#frm-login").addClass("w-25");
                $("#frm-login").removeClass("w-75");
                $("#frm-validate").addClass("w-25");
                $("#frm-validate").removeClass("w-75");
            }
        }
        $(window).resize(onresize);
        onresize();
    </script>
</div>


